<Application x:Class="wpf_simpleCalculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:wpf_simpleCalculator"
             StartupUri="MainWindow.xaml">
    <!--For Application Styles globally -->
    <Application.Resources>
        <SolidColorBrush x:Key="numberColors" Color="#444444"></SolidColorBrush>
        <SolidColorBrush x:Key="operatorColors" Color="Orange" ></SolidColorBrush>
        <SolidColorBrush x:Key="numberFontColor" Color="White" ></SolidColorBrush>
        
        <!--Define styles-->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontSize" Value="20" ></Setter>
            <Setter Property="Margin" Value="3"></Setter>
            
        </Style>
        
    </Application.Resources>
</Application>
